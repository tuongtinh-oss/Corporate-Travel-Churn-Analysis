import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# 1. Đọc và làm sạch dữ liệu
users = pd.read_csv('users.csv')
flights = pd.read_csv('flights.csv', parse_dates=['date'])
hotels = pd.read_csv('hotels.csv', parse_dates=['date'])

# 2. Định nghĩa Churn bằng Numpy (Logic Recency)
latest_date = flights['date'].max()
user_last_trip = flights.groupby('userCode')['date'].max().reset_index()

# Dùng np.where để gắn nhãn Churn (Nếu > 180 ngày không hoạt động)
# Dùng np.nan để xử lý những User chưa từng phát sinh giao dịch
df_master = users.merge(user_last_trip, left_on='code', right_on='userCode', how='left')
df_master['is_churned'] = np.where(
    (df_master['date'].isna()) | ((latest_date - df_master['date']).dt.days > 180), 1, 0
)

# 3. Phân tích BA: Khám phá lỗ hổng Hotel Leakage
# Kiểm tra sự đứt gãy giữa Flight và Hotel
flight_trips = flights[['travelCode', 'userCode']].drop_duplicates()
hotel_trips = hotels[['travelCode', 'userCode']].drop_duplicates()
hotel_trips['has_hotel'] = 1

leakage_check = flight_trips.merge(hotel_trips, on=['travelCode', 'userCode'], how='left')
leakage_check['has_hotel'] = np.where(leakage_check['has_hotel'].isna(), 0, 1)

# Tính tỷ lệ đặt hotel trung bình của mỗi user
user_leakage = leakage_check.groupby('userCode')['has_hotel'].mean().reset_index()
df_master = df_master.merge(user_leakage, on='userCode', how='left').fillna(0)

# 4. Trực quan hóa (Seaborn & Matplotlib)
plt.figure(figsize=(12, 6))
sns.boxplot(x='is_churned', y='has_hotel', data=df_master, palette='viridis')
plt.title('Chẩn đoán: Tỷ lệ đặt Khách sạn vs Trạng thái Rời bỏ')
plt.show()
# Insight: Khách hàng Churn thường có tỷ lệ "Bundle" (Flight + Hotel) cực thấp.